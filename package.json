{
  "name": "sentinel",
  "version": "1.64.0",
  "description": "Sentinel - Remote Monitoring and Management",
  "main": "dist/main/main.js",
  "author": "Sentinel",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json && npm run copy:migrations",
    "build:renderer": "vite build",
    "copy:migrations": "node -e \"const fs=require('fs');const p=require('path');const s='src/main/migrations';const d='dist/main/migrations';fs.mkdirSync(d,{recursive:true});fs.readdirSync(s).forEach(f=>fs.copyFileSync(p.join(s,f),p.join(d,f)))\"",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "agent:build": "cd agent && powershell -ExecutionPolicy Bypass -File build.ps1 -Platform all",
    "agent:build:win": "cd agent && powershell -ExecutionPolicy Bypass -File build.ps1 -Platform windows",
    "agent:build:linux": "cd agent && powershell -ExecutionPolicy Bypass -File build.ps1 -Platform linux",
    "agent:build:macos": "cd agent && powershell -ExecutionPolicy Bypass -File build.ps1 -Platform macos",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "sync-version": "node scripts/sync-version.js",
    "release:agent": "npm run sync-version && npm run agent:build:win",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "@azure/msal-node": "^3.8.4",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@fullcalendar/daygrid": "^6.1.19",
    "@fullcalendar/interaction": "^6.1.19",
    "@fullcalendar/react": "^6.1.19",
    "@fullcalendar/timegrid": "^6.1.19",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0",
    "@types/multer": "^2.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "express": "^4.18.2",
    "multer": "^2.0.2",
    "node-forge": "^1.3.3",
    "nodemailer": "^7.0.11",
    "sharp": "^0.34.5",
    "systeminformation": "^5.21.22",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@tanstack/react-query": "^5.17.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.6",
    "@types/node-forge": "^1.3.14",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-icon-builder": "^2.0.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^27.3.0",
    "lucide-react": "^0.303.0",
    "postcss": "^8.4.33",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.21.1",
    "recharts": "^2.10.3",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^5.0.11",
    "vitest": "^4.0.16",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.sentinel.rmm",
    "productName": "Sentinel",
    "directories": {
      "output": "release/app"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "release/agent/",
        "to": "agent/",
        "filter": [
          "sentinel-agent*",
          "sentinel-watchdog*",
          "version.json"
        ]
      },
      {
        "from": "update-config.json",
        "to": "update-config.json",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "scripts/",
        "to": "scripts/",
        "filter": [
          "generate-certs.ps1"
        ]
      },
      {
        "from": "src/portal/",
        "to": "portal/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Sentinel-Setup-${version}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "Ohio15",
      "repo": "Sentinel"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Ohio15/Sentinel.git"
  }
}
