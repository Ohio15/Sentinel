# =============================================================================
# Sentinel RMM Platform - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit the .env file to version control
#
# Generate secure secrets using:
#   openssl rand -base64 32   # for passwords
#   uuidgen                   # for enrollment token
# =============================================================================

# =============================================================================
# Server Configuration
# =============================================================================
DOMAIN=sentinel.yourdomain.com
SERVER_ENV=production
SERVER_URL=https://sentinel.yourdomain.com

# =============================================================================
# Database Configuration (Local Development)
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=sentinel
DB_USER=sentinel
DB_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
DB_SSL=true
DB_POOL_MAX=20

# =============================================================================
# Docker Compose PostgreSQL
# =============================================================================
POSTGRES_USER=sentinel
POSTGRES_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD
POSTGRES_DB=sentinel
DB_SSL_MODE=prefer

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_USE_STRONG_PASSWORD

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Secret - minimum 32 characters, generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_WITH_OPENSSL_RAND

# Enrollment Token - used by agents to register, generate with: uuidgen
ENROLLMENT_TOKEN=CHANGE_ME_GENERATE_UUID

# =============================================================================
# SSL/TLS Configuration
# =============================================================================
ACME_EMAIL=admin@yourdomain.com

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# Metrics Configuration
# =============================================================================
METRICS_RETENTION_DAYS=30
