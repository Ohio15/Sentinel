# Sentinel RMM Platform - Environment Variables
# Copy this file to .env and fill in your values

# Database
DB_PASSWORD=your-secure-database-password

# Security
JWT_SECRET=your-very-long-secret-key-at-least-32-characters
ENROLLMENT_TOKEN=your-agent-enrollment-token

# CORS
ALLOWED_ORIGINS=https://sentinel.example.com,https://admin.sentinel.example.com

# Push Notifications (optional)
APNS_KEY_PATH=/path/to/AuthKey.p8
APNS_KEY_ID=your-key-id
APNS_TEAM_ID=your-team-id
APNS_BUNDLE_ID=com.yourcompany.sentinel
APNS_SANDBOX=false
FCM_CREDENTIALS_PATH=/path/to/firebase-credentials.json
FCM_PROJECT_ID=your-firebase-project

# Monitoring (optional)
GRAFANA_PASSWORD=your-grafana-admin-password
